@import 'lib/reveal.css'
@import 'lib/theme/simple.css'

blue = #4682b4

.reveal
  p, ol, ul, li, blockquote
    line-height 1.25em
  p, ol, ul, li, blockquote, pre
    margin-top .75em
    margin-bottom .75em
  ol, ul
    li:first-child
      margin-top 0
    li:last-child
      margin-bottom 0
  h1, h2, h3, h4, h5, h6
    margin-top .25em
    margin-bottom .75em
  ul
    list-style-type circle
  pre
    code
      padding 2em
      word-wrap normal
      &::selection,
      ::selection
        background-color #000
        color blue
      &:focus
        outline none
  blockquote
    border-left .25em solid blue
    box-shadow none
    padding 0 1em
    text-align left
    &:before,
    &:after
      content ''
    p:first-child, p:last-child
      display block
    .author
      text-align right
  iframe.blocks
    width 960px
    height 500px
    margin-left -30px
  section
    img
      border none
      box-shadow none

  #title
    h1, h2, h3, h4, h5, h6
      text-transform none
      font-family 'Helvetica Neue', sans-serif
      font-weight lighter
      letter-spacing -.05em
      margin 0
    h1
      font-size 60px
    h3
      font-size 45px
      margin 1.5em 0 2.5em
  img.demo
    max-height 500px